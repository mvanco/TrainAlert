<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="180"
        android:entries="@array/pref_colour_titles"
        android:entryValues="@array/pref_colour_values"
        android:key="colour"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_colour" />

    <ListPreference
        android:defaultValue="180"
        android:entries="@array/pref_graphics_titles"
        android:entryValues="@array/pref_graphics_titles"
        android:key="colour"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_graphics" />

    <RingtonePreference
        android:defaultValue="content://settings/system/notification_sound"
        android:key="notifications_new_message_ringtone"
        android:ringtoneType="notification"
        android:title="@string/pref_title_ringtone" />

    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <SwitchPreference
        android:defaultValue="true"
        android:key="notifications_new_message_vibrate"
        android:title="@string/pref_title_vibrate" />

    <MultiSelectListPreference
        android:entries="@array/pref_distances_titles"
        android:entryValues="@array/pref_distances_values"
        android:key="distances"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="@string/pref_distances_summary"
        android:title="@string/pref_title_distances" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_before_text"
        android:inputType="textCapWords"
        android:key="category_text_before"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="@string/pref_default_before_text"
        android:title="@string/pref_title_before_text" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="category_include_distance"
        android:title="@string/pref_title_include_distance" />

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/pref_default_after_text"
        android:dependency="category_include_distance"
        android:inputType="textCapWords"
        android:key="category_text_after"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="@string/pref_default_after_text"
        android:title="@string/pref_title_after_text" />


</PreferenceScreen>
