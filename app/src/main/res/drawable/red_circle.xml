<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#ff0000" />
            <stroke
                android:width="@dimen/red_circle_stroke_width"
                android:color="#000000" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/red_circle_red_border_width"
        android:gravity="center"
        android:left="@dimen/red_circle_red_border_width"
        android:right="@dimen/red_circle_red_border_width"
        android:top="@dimen/red_circle_red_border_width">
        <shape android:shape="oval">
            <solid android:color="#f1ed15" />
            <stroke
                android:width="@dimen/red_circle_stroke_width"
                android:color="#000000" />
        </shape>
    </item>
</layer-list>
