<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#ffffff" />
            <stroke
                android:width="@dimen/alarm_stroke_width"
                android:color="#a6a6a6" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/speed_view_whitePadding_width"
        android:gravity="center"
        android:left="@dimen/speed_view_whitePadding_width"
        android:right="@dimen/speed_view_whitePadding_width"
        android:top="@dimen/speed_view_whitePadding_width">
        <shape android:shape="oval">
            <solid android:color="@color/red" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/speed_view_outerBorder_width"
        android:gravity="center"
        android:left="@dimen/speed_view_outerBorder_width"
        android:right="@dimen/speed_view_outerBorder_width"
        android:top="@dimen/speed_view_outerBorder_width">
        <shape android:shape="oval">
            <solid android:color="#ffffff" />
            <stroke
                android:width="@dimen/alarm_stroke_width"
                android:color="#a6a6a6" />
        </shape>
    </item>
</layer-list>