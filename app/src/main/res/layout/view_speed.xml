<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:id="@+id/speed_container"
        android:layout_width="@dimen/speedView_width"
        android:layout_height="@dimen/speedView_height">

        <ImageView
            android:id="@+id/speed_sign"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/speed_background"
            android:contentDescription="@string/fragment_main_image_view_desc" />

        <RelativeLayout
            android:layout_marginTop="@dimen/speedView_text_marginTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/speed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/speedView_textSize"
                tools:text="50" />

            <TextView
                android:id="@+id/speed_unit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/speed_view_unit"
                android:textSize="@dimen/speedView_unit_textSize"
                android:layout_below="@id/speed_text"
                android:layout_marginTop="@dimen/speedView_unit_marginTop"
                tools:text="km/h" />

        </RelativeLayout>
    </FrameLayout>
</layout>