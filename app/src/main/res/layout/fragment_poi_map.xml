<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_main_map_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cz.intesys.trainalert.fragment.MainFragment">

        <org.osmdroid.views.MapView
            android:id="@+id/fragment_main_mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="@dimen/fab_gps_margin"
            android:layout_marginEnd="@dimen/fab_gps_margin"
            android:layout_marginRight="@dimen/fab_gps_margin"
            android:onClick="onFabClicked"
            android:src="@drawable/fab_gps_fixed"
            app:backgroundTint="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/fragment_main_mapview"
            app:layout_constraintEnd_toEndOf="@+id/fragment_main_mapview" />

    </android.support.constraint.ConstraintLayout>

</layout>